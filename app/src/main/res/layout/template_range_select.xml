<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/range_select_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOT AT ALL LIKELY"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/range_select_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EXTREMELY LIKELY"
            android:textAlignment="textEnd"
            android:textSize="12sp" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/range_select_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_for_view"
            android:minHeight="32dp"
            android:orientation="horizontal"
            android:padding="2dp" />
    </HorizontalScrollView>

</LinearLayout>