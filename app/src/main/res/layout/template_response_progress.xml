<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:gravity="right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/survey_progress_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bottom_line"
        android:gravity="center"
        android:padding="4dp"
        android:singleLine="false"
        android:text="Survey Title"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_line"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/survey_progress_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/survey_progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:scaleY="2" />

    <LinearLayout
        android:id="@+id/survey_progress_button_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/survey_progress_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffD000"
            android:text="Submit" />
    </LinearLayout>

</LinearLayout>